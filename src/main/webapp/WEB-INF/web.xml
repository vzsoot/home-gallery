<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>com.akulogics.gallery.servlet.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.akulogics.gallery.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gallery</servlet-name>
        <servlet-class>com.akulogics.gallery.servlet.GalleryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>galleriesServlet</servlet-name>
        <servlet-class>com.akulogics.gallery.servlet.GalleriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>itemServlet</servlet-name>
        <servlet-class>com.akulogics.gallery.servlet.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.akulogics.gallery.servlet.InitServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gallery</servlet-name>
        <url-pattern>/gallery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>galleriesServlet</servlet-name>
        <url-pattern>/galleries</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>itemServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>initServlet</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>


</web-app>
